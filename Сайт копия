    <script>
        // --- ДАННЫЕ ДЛЯ РЕДАКТИРОВАНИЯ: События ---
        // Чтобы изменить список событий, просто отредактируйте этот массив (eventData).
        // type: "Вебинар" или "Марафон"
        // status: "Скоро" или "Идет набор"
        // title, description: текст события
        // buttonText: Текст на кнопке (например, "Записаться", "Узнать")
        // typeColor: Указывает цвет карточки. Используйте один из доступных классов:
        // 'turquoise', 'teal', 'indigo', 'pink', 'amber'
        const eventData = [
            
            {
                type: "Марафон",
                status: "Идет набор",
                title: "Биохакинг: Перезагрузка за 14 дней",
                description: "2-недельная программа очищения и восстановления организма. Групповая поддержка, заметный результат через 14 дней.",
                typeColor: "teal", // <-- Измените цвет здесь
                buttonText: "Занять место"
            },
            {
                type: "Встреча",
                status: "Воскресенье 14.12.2025 г. Артём",
                title: "Выставка-дегустация здоровое поколение",
                description: "умные подарки к новому году здесь вы найдёте полезные, вкусные, умные и даже.... Необычные подарки для здоровья молодости и красоты рады видеть вас по адресу: г. Артем ул. Кирова 39А бизнес центр лидер офис 4",
                typeColor: "teal", // <-- Измените цвет здесь
                buttonText: "узнать подробнее"
            }
        ];

        // --- Функция рендеринга событий ---
        function renderEvents() {
            const container = document.getElementById('events-container');
            if (!container) return;
            container.innerHTML = ''; 

            eventData.forEach((event, index) => {
                // Используем значение из typeColor для подстановки в класс Tailwind
                const colorClass = event.typeColor || 'turquoise'; 
                
                const cardHtml = `
                    <div class="event-card bg-white p-6 rounded-3xl border border-slate-100 flex flex-col justify-between h-full fade-in-up delay-${(index + 1) * 100}" onclick="scrollToSection('contact')">
                        <div class="absolute top-0 left-0 w-2 h-full bg-${colorClass}-500 rounded-l-3xl"></div>
                        <div>
                            <div class="flex items-center gap-3 mb-4 pl-4">
                                <span class="bg-${colorClass}-100 text-${colorClass}-700 px-3 py-1 rounded-full text-xs font-bold uppercase">${event.type}</span>
                                <span class="text-slate-400 text-sm font-medium"><i class="far fa-calendar-alt mr-1"></i> ${event.status}</span>
                            </div>
                            <h3 class="text-xl font-bold text-slate-800 mb-3 pl-4">${event.title}</h3>
                            <p class="text-slate-600 mb-6 text-sm pl-4">${event.description}</p>
                        </div>
                        <button onclick="scrollToSection('contact')" class="w-full py-3 bg-slate-50 text-slate-700 font-bold rounded-xl hover:bg-${colorClass}-500 hover:text-white transition duration-300">
                            ${event.buttonText}
                        </button>
                    </div>
                `;
                container.innerHTML += cardHtml;
            });
        }
        
        // --- Скрипт для плавной прокрутки ---
        function scrollToSection(id) {
            const element = document.getElementById(id);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        // --- Логика Квиза ---
        const quizQuestions = [
            "Вам тяжело просыпаться по утрам, даже после долгого сна?",
            "Чувствуете ли вы сонливость и упадок сил в середине дня?",
            "Есть ли у вас лишний вес, который сложно сбросить?",
            "Замечаете ли вы, что волосы стали более ломкими или выпадают?"
        ];
        let currentQuestionIndex = 0;
        let yesAnswersCount = 0;

        const questionTextElement = document.getElementById('question-text');
        const progressBarElement = document.getElementById('progress-bar');
        const questionBlockElement = document.getElementById('question-block');
        const resultBlockElement = document.getElementById('result-block');
        const resultTitleElement = document.getElementById('result-title');
        const resultTextElement = document.getElementById('result-text');
        const resultIconElement = document.getElementById('result-icon');
        const resultButtonElement = document.getElementById('result-button');

        function updateQuiz() {
            // Анимация исчезновения
            questionBlockElement.classList.add('fade-out');
            
            setTimeout(() => {
                if (currentQuestionIndex < quizQuestions.length) {
                    questionTextElement.textContent = quizQuestions[currentQuestionIndex];
                    const progress = ((currentQuestionIndex + 1) / quizQuestions.length) * 100;
                    progressBarElement.style.width = `${progress}%`;
                    questionBlockElement.classList.remove('fade-out'); // Появление нового вопроса
                } else {
                    showResult();
                }
            }, 300); // Задержка для анимации
        }

        function handleAnswer(isYes) {
            if (isYes) {
                yesAnswersCount++;
            }
            currentQuestionIndex++;
            updateQuiz();
        }

        function showResult() {
            questionBlockElement.classList.add('hidden');
            resultBlockElement.classList.remove('hidden');
            progressBarElement.parentElement.classList.add('hidden');

            let resultTitle = "";
            let resultText = "";
            
            if (yesAnswersCount <= 1) {
                resultIconElement.className = "fas fa-shield-alt text-6xl text-turquoise-500 mb-4";
                resultTitle = "Хороший потенциал!";
                resultText = "Ваш организм справляется неплохо, но есть моменты, которые можно улучшить для максимальной энергии и красоты. Профилактика — лучшее решение.";
            } else if (yesAnswersCount <= 3) {
                resultIconElement.className = "fas fa-exclamation-triangle text-6xl text-yellow-500 mb-4";
                resultTitle = "Организму нужна поддержка";
                resultText = "Ваше тело подает явные сигналы SOS. Игнорирование этих симптомов может привести к более серьезным проблемам. Пора заняться клеточным питанием.";
            } else {
                resultIconElement.className = "fas fa-battery-empty text-6xl text-red-500 mb-4";
                resultTitle = "Требуется срочная перезагрузка!";
                resultText = "Ваши ресурсы на исходе. Хроническая усталость и проблемы с внешностью — это крик организма о помощи. Вам необходим комплексный план восстановления.";
            }

            resultTitleElement.textContent = resultTitle;
            resultTextElement.textContent = resultText;
            
            // Формируем ссылку для WhatsApp с готовым текстом, включая результат
            const whatsappNumber = "79242477977";
            const message = `Привет, Анастасия! Я прошла тест на сайте. Мой результат: "${resultTitle}" (Ответов "Да": ${yesAnswersCount}/4). Хочу записаться на консультацию и получить план восстановления.`;
            const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
            
            resultButtonElement.href = whatsappLink;
        }

        // Инициализация
        document.addEventListener("DOMContentLoaded", () => {
            renderEvents(); // Запускаем рендеринг событий
            // Инициализация квиза
            questionTextElement.textContent = quizQuestions[0];
            const progress = ((currentQuestionIndex + 1) / quizQuestions.length) * 100;
            progressBarElement.style.width = `${progress}%`;

            // --- Логика Анимации при скролле ---
            const fadeElements = document.querySelectorAll('.fade-in-up');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });

            fadeElements.forEach(el => observer.observe(el));
        });


        // --- Логика Копирования ---
        function copyToClipboard(text) {
            if (navigator.clipboard && window.isSecureContext) {
                navigator.clipboard.writeText(text).then(() => {
                    showCopyFeedback();
                }).catch(err => {
                    console.error('Не удалось скопировать: ', err);
                    fallbackCopyTextToClipboard(text);
                });
            } else {
                fallbackCopyTextToClipboard(text);
            }
        }

        function fallbackCopyTextToClipboard(text) {
            const textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.top = "0";
            textArea.style.left = "0";
            textArea.style.position = "fixed";
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            try {
                const successful = document.execCommand('copy');
                if (successful) showCopyFeedback();
            } catch (err) {
                console.error('Fallback copy failed', err);
            }
            document.body.removeChild(textArea);
        }

        function showCopyFeedback() {
            const feedback = document.getElementById('copy-feedback');
            feedback.style.opacity = '1';
            setTimeout(() => {
                feedback.style.opacity = '0';
            }, 2000);
        }
    </script>
</body>
</html>
